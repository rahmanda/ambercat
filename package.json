  "main": "index.js",
  "scripts": {
    "cleanup": "rimraf ./build",
    "lint": "eslint './src/**/*.{js,vue}' --fix ; exit 0",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode development --config webpack.client.config.js",
    "build:server": "webpack --mode production --config webpack.server.config.js",
    "server": "npm run cleanup && npm run build && node ./server.js"
  },
  "repository": {
    "type": "git",
