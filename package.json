    "node": ">=9.10.0",
    "npm": ">=5.0.0"
  },
  "bugs": {
    "url": "https://github.com/rahmanda/ambercat/issues"
  },
  "homepage": "https://github.com/rahmanda/ambercat#readme",
  "dependencies": {
    "express": "^4.16.4",
    "markdown-it": "^8.4.2",
    "vue": "^2.6.3",
    "vue-router": "^3.0.2",
    "vue-server-renderer": "^2.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
